---
import Section from "@/components/Section.astro";

const SERVICIOS = [
  {
    titulo: "Calibración de Instrumentos",
    descripcion:
      "Servicios especializados de calibración para instrumentos de medición en el sector de hidrocarburos.",
  },
  {
    titulo: "Verificación Normativa",
    descripcion:
      "Evaluación de conformidad con las normas asociadas al sector de hidrocarburos.",
  },
];
---

<Section title="NUESTROS SERVICIOS">
  <div class="grid md:grid-cols-2 gap-6 sm:gap-8">
    {
      SERVICIOS.map(({ titulo, descripcion }) => (
        <div class="bg-white p-4 sm:p-6 md:p-8 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 border-b-4 border-secondary">
          <h3 class="text-xl sm:text-2xl font-bold text-primary mb-2 sm:mb-4">
            {titulo}
          </h3>
          <p class="text-sm sm:text-base text-gray-700 leading-relaxed">
            {descripcion}
          </p>
        </div>
      ))
    }
  </div>
</Section>
