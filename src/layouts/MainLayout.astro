---
import SEOLayout from './SEOLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import "@/styles/global.css"

// Props para el layout principal
interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  keywords?: string[];
}

// Recibimos las props y las pasamos al SEOLayout
const { 
  title = "Kepler Metrology",
  description = "Soluciones avanzadas de metrolog√≠a para la industria",
  image,
  canonicalURL,
  keywords
} = Astro.props;
---

<SEOLayout 
  title={title}
  description={description}
  image={image}
  canonicalURL={canonicalURL}
  keywords={keywords}
>
  <div class="flex flex-col min-h-screen">
    <Header />
    
    <main class="flex-grow">
      <slot />
    </main>
    
    <Footer />
  </div>
</SEOLayout>