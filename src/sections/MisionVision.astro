---
import Section from "@/components/Section.astro";
import valores from "@/assets/valores.png";

const MISION =
  "KEPLER METROLOGY trabaja en su entorno para ser un centro de soluciones en el área de Metrología orientadas a generar bienestar en nuestros clientes, socios, comunidad y para nuestra familia, primando nuestro compromiso, nuestra integridad y nuestros valores.";

const VISION =
  "Entregar servicios de calibración y medición de alto valor a nuestros clientes colaborando con ellos y con la sociedad a tener una mejor calidad de vida con productos y servicios de alta calidad.";
---

<Section id="nosotros">
  <div class="grid md:grid-cols-2 gap-6 sm:gap-8 md:gap-10">
    <!-- Columna 1: Misión y Visión -->
    <div class="flex flex-col gap-6">
      <div
        class="bg-primary-light/70 p-4 sm:p-6 md:p-8 rounded-lg shadow-lg flex-1 flex flex-col"
      >
        <h2 class="text-2xl sm:text-3xl font-bold text-primary mb-4 sm:mb-6">
          MISIÓN
        </h2>
        <p class="text-sm sm:text-base text-gray-700 leading-relaxed flex-grow">
          {MISION}
        </p>
      </div>
      <div class="bg-primary/80 p-4 sm:p-6 md:p-8 rounded-lg shadow-lg text-white flex-1 flex flex-col">
        <h2 class="text-2xl sm:text-3xl font-bold mb-4 sm:mb-6">VISIÓN</h2>
        <p class="text-sm sm:text-base leading-relaxed flex-grow">
          {VISION}
        </p>
      </div>
    </div>
    
    <!-- Columna 2: Valores (Imagen) -->
    <div class="flex items-center justify-center bg-white/70 p-4 sm:p-6 md:p-8 rounded-lg shadow-lg h-full">
      <div class="w-full">
        <h2 class="text-2xl sm:text-3xl font-bold text-primary mb-4 sm:mb-6 text-center">
          VALORES
        </h2>
        <img 
          src={valores.src} 
          alt="Valores de Kepler Metrology" 
          class="w-full h-auto rounded-lg object-contain max-h-[500px]"
        />
      </div>
    </div>
  </div>
</Section>
