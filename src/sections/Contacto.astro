---
import Section from "@/components/Section.astro";
import ContactForm from "@/components/ContactForm.astro";
import LocationIcon from "@/components/icons/LocationIcon.astro";
import EmailIcon from "@/components/icons/EmailIcon.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Section
  id={currentLocale === "en" ? "contact" : "contacto"}
  title={i18n.CONTACT.TITLE}
  className="mx-0 px-0"
  bgColor="bg-gray-50"
>
  <div class="grid md:grid-cols-2 gap-8 sm:gap-10 md:gap-12">
    <div>
      <div
        class="bg-white rounded-xl shadow-lg overflow-hidden border border-neutral-300"
      >
        <div class="p-6 space-y-6">
          <div class="flex items-start gap-4">
            <div
              class="bg-primary/10 w-12 h-12 rounded-full flex items-center justify-center shrink-0"
            >
              <LocationIcon class="h-6 w-6 text-primary" />
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-800">
                {i18n.CONTACT.ADDRESS_TITLE}
              </h4>
              <p class="text-gray-600 mt-1">
                {i18n.CONTACT.ADDRESS}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="bg-primary/10 w-12 h-12 rounded-full flex items-center justify-center shrink-0"
            >
              <EmailIcon class="h-6 w-6 text-primary" />
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-800">
                {i18n.CONTACT.EMAIL_TITLE}
              </h4>
              <p class="text-gray-600 mt-1">
                {i18n.CONTACT.EMAIL}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Mapa -->
      <!-- Mapa de Google -->
      <div
        class="h-[200px] md:h-[300px] rounded-xl overflow-hidden border border-neutral-300 shadow-lg mt-8"
      >
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3735.3610938639755!2d-100.4349423!3d20.5658077!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d3453c02016d4f%3A0x77c3ed1c305a3bc5!2sPaseo%20de%20las%20Parandas%208%2C%20Los%20Olvera%2C%2076904%20Los%20Olvera%2C%20Qro.!5e0!3m2!1ses-419!2smx!4v1716661608732!5m2!1ses-419!2smx"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-full"
          title="Ubicación de Kepler Oil & Gas en Querétaro"
        >
        </iframe>
      </div>
    </div>
    <ContactForm />
  </div>
</Section>

<style>
  .clip-path-hexagon {
    clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
    padding: 0.5rem 0.7rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
