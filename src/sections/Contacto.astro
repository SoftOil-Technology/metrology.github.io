---
import Section from "@/components/Section.astro";
import ContactForm from "@/components/ContactForm.astro";
---

<Section 
  id="contacto" 
  title="CONTÁCTANOS" 
  bgColor="bg-gray-100"
>
  <div class="grid md:grid-cols-2 gap-6 sm:gap-8 md:gap-10">
    <div>
      <h3 class="text-xl sm:text-2xl font-semibold text-primary mb-4 sm:mb-6">
        Información de Contacto
      </h3>
      <div class="space-y-3 sm:space-y-4">
        <div class="flex items-start">
          <div
            class="bg-primary p-2 sm:p-3 rounded-full text-white mr-3 sm:mr-4 shrink-0"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 sm:h-6 sm:w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <div>
            <h4 class="text-base sm:text-lg font-semibold text-gray-700">
              Dirección
            </h4>
            <p class="text-sm sm:text-base text-gray-600">
              Ciudad de México, México
            </p>
          </div>
        </div>

        <div class="flex items-start">
          <div
            class="bg-primary p-2 sm:p-3 rounded-full text-white mr-3 sm:mr-4 shrink-0"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 sm:h-6 sm:w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <div>
            <h4 class="text-base sm:text-lg font-semibold text-gray-700">
              Email
            </h4>
            <p class="text-sm sm:text-base text-gray-600">
              contacto@keplermetrology.com
            </p>
          </div>
        </div>

        <div class="flex items-start">
          <div
            class="bg-primary p-2 sm:p-3 rounded-full text-white mr-3 sm:mr-4 shrink-0"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 sm:h-6 sm:w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <div>
            <h4 class="text-base sm:text-lg font-semibold text-gray-700">
              Teléfono
            </h4>
            <p class="text-sm sm:text-base text-gray-600">
              +52 (55) 1234 5678
            </p>
          </div>
        </div>
      </div>

      <!-- Mapa o imagen de ubicación -->
      <div class="mt-6 sm:mt-8 bg-white p-3 sm:p-4 rounded-lg shadow-md">
        <img
          src="/images/mapa-ubicacion.jpg"
          alt="Ubicación de Kepler Metrology"
          class="w-full h-36 sm:h-48 object-cover rounded"
        />
        <p class="text-center text-xs sm:text-sm text-gray-500 mt-2">
          Visítanos en nuestras instalaciones
        </p>
      </div>
    </div>

    <ContactForm />
  </div>
</Section>
