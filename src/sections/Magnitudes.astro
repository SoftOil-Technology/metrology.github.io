---
import Section from "@/components/Section.astro";

const MAGNITUDES = [
  {
    titulo: "Presión",
    icono: "presion",
    descripcion:
      "Calibración de instrumentos de medición de presión con trazabilidad al CENAM.",
  },
  {
    titulo: "Temperatura",
    icono: "temperatura",
    descripcion:
      "Servicios de calibración para equipos de medición de temperatura.",
  },
  {
    titulo: "Flujo",
    icono: "flujo",
    descripcion:
      "Calibración de medidores de flujo para aplicaciones en el sector Oil & Gas.",
  },
  {
    titulo: "Volumen",
    icono: "volumen",
    descripcion:
      "Calibración de instrumentos volumétricos con precisión certificada.",
  },
  {
    titulo: "Dimensional",
    icono: "dimensional",
    descripcion:
      "Calibración de medidores de nivel y otros instrumentos dimensionales.",
  },
  {
    titulo: "Masa",
    icono: "masa",
    descripcion:
      "Servicios de calibración para instrumentos de pesaje y medición de masa.",
  },
];

const subtitulo = "Nuestro laboratorio cuenta con acreditación ante la Entidad Mexicana de Acreditación (EMA) y trazabilidad al Centro Nacional de Metrología (CENAM) en las siguientes magnitudes:";
---

<Section 
  id="magnitudes" 
  title="MAGNITUDES ACREDITADAS" 
  subtitle={subtitulo}
>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
    {
      MAGNITUDES.map((magnitud) => (
        <div class="bg-white p-4 sm:p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 border-t-4 border-primary">
          <div class="flex flex-row items-center sm:flex-col sm:items-center mb-3 sm:mb-4">
            <div class="hexagon-container border-2 border-secondary mr-4 sm:mr-0">
              <img
                src={`/images/${magnitud.icono}.avif`}
                alt={magnitud.titulo}
                class="hexagon-image"
              />
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-primary md:ml-0 ml-3 mb-0 sm:mb-2 sm:text-center">
              {magnitud.titulo}
            </h3>
          </div>
          <p class="text-sm sm:text-base text-gray-700">
            {magnitud.descripcion}
          </p>
        </div>
      ))
    }
  </div>
</Section>

<style>
  .hexagon-container {
    width: 60px;
    height: 60px;
    position: relative;
    overflow: hidden;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    background-color: #f3f4f6;
    margin: 0;
    sm:margin: 0 auto;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    /* Efecto de borde con pseudo-elemento para mantener el hexágono */
    position: relative;
  }
  
  .hexagon-container::before {
    content: '';
    position: absolute;
    top: -3px;
    left: -3px;
    right: -3px;
    bottom: -3px;
    background-color: var(--color-secondary, #f59e0b);
    z-index: -1;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  }

  .hexagon-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .hexagon-container:hover .hexagon-image {
    transform: scale(1.1);
  }

  @media (max-width: 640px) {
    .hexagon-container {
      width: 60px;
      height: 60px;
    }
  }
  
  @media (min-width: 640px) {
    .hexagon-container {
      width: 100px;
      height: 100px;
      margin: 0 auto;
    }
  }
  
  @media (min-width: 1024px) {
    .hexagon-container {
      width: 150px;
      height: 150px;
      margin: 0 auto;
    }
  }
</style>