---
import Section from "@/components/Section.astro";
import ContactForm from "@/components/ContactForm.astro";
import LocationIcon from "@/components/icons/LocationIcon.astro";
import EmailIcon from "@/components/icons/EmailIcon.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Section
  id={currentLocale === "en" ? "contact" : "contacto"}
  title={i18n.CONTACT.TITLE}
  className="mx-0 px-0"
  bgColor="bg-gray-50"
>
  <div class="grid md:grid-cols-2 gap-8 sm:gap-10 md:gap-12">
    <div>
      <div
        class="bg-white rounded-xl shadow-lg overflow-hidden border border-neutral-500/50"
      >
        <div class="p-6 space-y-6">
          <div class="flex items-start gap-4">
            <div
              class="bg-primary/10 w-12 h-12 rounded-full flex items-center justify-center shrink-0"
            >
              <LocationIcon class="h-6 w-6 text-primary" />
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-800">
                {i18n.CONTACT.ADDRESS_TITLE}
              </h4>
              <p class="text-gray-600 mt-1">
                {i18n.CONTACT.ADDRESS}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="bg-primary/10 w-12 h-12 rounded-full flex items-center justify-center shrink-0"
            >
              <EmailIcon class="h-6 w-6 text-primary" />
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-800">
                {i18n.CONTACT.EMAIL_TITLE}
              </h4>
              <p class="text-gray-600 mt-1">
                {i18n.CONTACT.EMAIL}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Mapa -->
      <div class="mt-8">
        <img
          src="/images/mapa-ubicacion.png"
          alt="UbicaciÃ³n de Kepler Metrology"
          class="w-full h-auto rounded-xl shadow-lg border-4 border-white"
        />
      </div>
    </div>
    <ContactForm />
  </div>
</Section>

<style>
  .clip-path-hexagon {
    clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
    padding: 0.5rem 0.7rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
