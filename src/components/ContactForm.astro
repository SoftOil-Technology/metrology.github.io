---
import { getI18N } from "@/i18n";
import InputField from "@/components/forms/InputField.astro";
import TextareaField from "@/components/forms/TextareaField.astro";
import Button from "@/components/forms/Button.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div
  class="bg-white rounded-xl shadow-lg overflow-hidden border border-neutral-300"
>
  <form class="p-6" id="contact-form">
    <div
      id="form-status"
      class="hidden mb-6 p-4 rounded-xl text-sm font-medium"
    >
    </div>

    <div class="space-y-5">
      <div class="grid grid-cols-2 gap-4">
        <InputField
          id="nombre"
          name="nombre"
          type="text"
          label={i18n.CONTACT.FORM.NAME}
          required={true}
          iconName="user"
          placeholder={i18n.CONTACT.FORM.NAME_PLACEHOLDER}
        />

        <InputField
          id="apellidos"
          name="apellidos"
          type="text"
          label={i18n.CONTACT.FORM.LAST_NAME}
          required={true}
          iconName="user"
          placeholder={i18n.CONTACT.FORM.LAST_NAME_PLACEHOLDER}
        />
      </div>

      <InputField
        id="email"
        name="email"
        type="email"
        label={i18n.CONTACT.FORM.EMAIL}
        required={true}
        iconName="email"
        placeholder={i18n.CONTACT.FORM.EMAIL_PLACEHOLDER}
      />

      <InputField
        id="telefono"
        name="telefono"
        type="tel"
        label={i18n.CONTACT.FORM.PHONE}
        iconName="phone"
        placeholder={i18n.CONTACT.FORM.PHONE_PLACEHOLDER}
      />

      <TextareaField
        id="mensaje"
        name="mensaje"
        label={i18n.CONTACT.FORM.MESSAGE}
        required={true}
        rows={4}
        placeholder={i18n.CONTACT.FORM.MESSAGE_PLACEHOLDER}
      />

      <div class="pt-3">
        <Button
          type="submit"
          text={i18n.CONTACT.FORM.SUBMIT}
          variant="primary"
          fullWidth={true}
        />
      </div>
    </div>
  </form>
</div>

<script define:vars={{ i18n }}>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form");
    const statusDiv = document.getElementById("form-status");

    if (!form || !statusDiv || !(form instanceof HTMLFormElement)) return;

    form.addEventListener("submit", (e) => {
      e.preventDefault();

      // Get form data
      const formData = new FormData(form);
      const formValues = Object.fromEntries(formData.entries());

      // Log form data to console
      console.log("Form submitted with values:", formValues);

      // Show success message
      statusDiv.classList.remove("hidden", "bg-red-100", "text-red-700");
      statusDiv.classList.add("bg-green-100", "text-green-700");

      // Show success message
      statusDiv.textContent = i18n.CONTACT.FORM.SUCCESS;

      // Reset form
      form.reset();
    });
  });
</script>
