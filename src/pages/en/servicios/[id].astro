---
import Layout from "@/layouts/MainLayout.astro";
import Section from "@/components/Section.astro";
import { SERVICIOS } from "@/data/servicios.js";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const lang = currentLocale === "en" ? "en" : "es";

export function getStaticPaths() {
  return SERVICIOS.map((servicio) => ({
    params: { id: servicio.id },
    props: { servicio },
  }));
}

const { servicio } = Astro.props;
---

<Layout
  title={`${i18n.SERVICES.TITLE} - ${servicio[lang].titulo} | Kepler Metrology`}
>
  <div class="h-20 md:h-16"></div>
  <Section>
    <div class="mb-8 rounded-xl overflow-hidden shadow-xl">
      <img
        src={servicio.imagen}
        alt={`${servicio[lang].titulo}`}
        class="w-full h-auto max-h-[30vh] object-cover"
        transition:name={servicio.imagen}
      />
      <div class="bg-primary text-white py-4 px-6">
        <h1
          transition:name={servicio[lang].titulo}
          class="text-2xl md:text-4xl font-bold"
        >
          {servicio[lang].titulo}
        </h1>
      </div>
    </div>

    <div
      class="bg-white p-6 md:p-8 rounded-xl shadow-xl border border-neutral-200"
    >
      <h2 class="text-2xl font-bold text-primary mb-6">
        {i18n.SERVICES.SERVICE_DESCRIPTION}
      </h2>

      <p class="text-gray-700 mb-8 text-lg">
        {servicio[lang].descripcion}
      </p>

      <div class="mb-8">
        <h3 class="text-xl font-semibold text-secondary mb-4">
          {i18n.SERVICES.SERVICES_WE_OFFER}
        </h3>
        <p class="text-gray-700 mb-4">
          {servicio[lang].servicio}
        </p>

        <ul class="space-y-2 mt-4">
          {
            servicio.detalles[lang].map((detalle) => (
              <li class="flex items-start">
                <span class="text-primary mr-2 mt-1">âœ“</span>
                <span class="text-gray-700">{detalle}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Section>
</Layout>
