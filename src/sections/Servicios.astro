---
import Section from "@/components/Section.astro";

// Utilizamos las mismas magnitudes que ya están definidas en Magnitudes.astro
const MAGNITUDES = [
  {
    titulo: "Presión",
    icono: "presion",
    descripcion:
      "Calibración de instrumentos de medición de presión con trazabilidad al CENAM.",
    servicio:
      "Calibración de manómetros, transmisores de presión y otros instrumentos de medición de presión.",
  },
  {
    titulo: "Temperatura",
    icono: "temperatura",
    descripcion:
      "Servicios de calibración para equipos de medición de temperatura.",
    servicio:
      "Calibración de termómetros, termopares, RTDs y otros instrumentos de medición térmica.",
  },
  {
    titulo: "Flujo",
    icono: "flujo",
    descripcion:
      "Calibración de medidores de flujo para aplicaciones en el sector Oil & Gas.",
    servicio:
      "Verificación y calibración de medidores de flujo para líquidos y gases en la industria petrolera.",
  },
  {
    titulo: "Volumen",
    icono: "volumen",
    descripcion:
      "Calibración de instrumentos volumétricos con precisión certificada.",
    servicio:
      "Calibración de tanques, probadores y otros instrumentos de medición volumétrica.",
  },
  {
    titulo: "Dimensional",
    icono: "dimensional",
    descripcion:
      "Calibración de medidores de nivel y otros instrumentos dimensionales.",
    servicio:
      "Verificación de instrumentos de medición dimensional y calibración de medidores de nivel.",
  },
  {
    titulo: "Masa",
    icono: "masa",
    descripcion:
      "Servicios de calibración para instrumentos de pesaje y medición de masa.",
    servicio:
      "Calibración de balanzas, básculas y otros instrumentos de pesaje con trazabilidad.",
  },
];

const subtitulo =
  "Ofrecemos servicios especializados de calibración basados en las magnitudes acreditadas por la EMA, garantizando precisión y confiabilidad en todas nuestras mediciones.";
---

<Section id="servicios" title="NUESTROS SERVICIOS" subtitle={subtitulo}>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
    {
      MAGNITUDES.map((magnitud) => (
        <div class="service-card bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 group">
          <div class="relative h-48 overflow-hidden">
            <img
              src={`/images/${magnitud.icono}.avif`}
              alt={magnitud.titulo}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-primary/80 to-transparent opacity-70 group-hover:opacity-90 transition-opacity duration-300" />
            <h3 class="absolute bottom-4 left-4 text-xl sm:text-2xl font-bold text-white">
              {magnitud.titulo}
            </h3>
          </div>

          <div class="p-4 sm:p-6">
            <h4 class="text-base font-semibold text-secondary mb-2">
              Servicio:
            </h4>
            <p class="text-sm sm:text-base text-gray-700">
              {magnitud.servicio}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</Section>

<style>
  .service-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    transform: translateY(0);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>
